<T3DataStructure>
    <meta type="array">
        <langChildren type="integer">0</langChildren>
        <langDisable type="integer">1</langDisable>
    </meta>
    <ROOT>
        <type>array</type>
        <el>
			<switchableControllerActions>
				<TCEforms>
					<label>View</label>
					<config>
						<type>select</type>
						<items>
							<numIndex index="1">
								<numIndex index="0">
									Upcoming Events
								</numIndex>
								<numIndex index="1">Event->upcoming;Event->detail</numIndex>
							</numIndex>
							<numIndex index="2">
								<numIndex index="0">
									List of Events
								</numIndex>
								<numIndex index="1">Event->list;Event->search;Event->detail</numIndex>
							</numIndex>
							<numIndex index="3">
								<numIndex index="0">
									Event Detail
								</numIndex>
								<numIndex index="1">Event->detail</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</switchableControllerActions>
			<settings.heading>
				<TCEforms>
					<label>Heading</label>
					<config>
						<type>input</type>
						<size>20</size>
					</config>
				</TCEforms>
			</settings.heading>

			<settings.showJustOneImage>
				<TCEforms>
					<label>Show just the first image</label>
					<displayCond>FIELD:settings.showImages:REQ:true</displayCond>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.showJustOneImage>

			<settings.max>
				<TCEforms>
					<label>Maximum number of events displayed at once (optional)</label>
					<config>
						<type>input</type>
						<size>1</size>
					</config>
				</TCEforms>
			</settings.max>

			<settings.pagination>
				<TCEforms>
					<label>Turn on pagination</label>
					<config>
						<type>check</type>
					</config>
				</TCEforms>
			</settings.pagination>
		</el>
    </ROOT>
</T3DataStructure>